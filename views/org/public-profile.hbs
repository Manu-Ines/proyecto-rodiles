    </div>

    <div class="container mt-5">
        <div class="my-4">
            <h3>Proyectos activos</h2>
        </div>
        <div class="row">
            {{#each projects as |project|}}
            <div class="col-sm-4 mb-3">
                {{> projectCard project}}
            </div>
            {{/each}}
        </div>
    </div>

    {{#if volunts}}
    <div class="container mt-5">
        <div class="my-4">
            <h2>Voluntariados activos</h2>
        </div>
        <div class="row">
            {{#each volunts as |volunt|}}
            <div class="col-sm-4 mb-3">
                {{> voluntCard volunt}}
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
