<div class="container my-7">
    <div style="max-width: 450px;" class="mx-auto card p-4">
        <h3><b>Registro de usuario</b></h3>
        <form action="/register" method="POST" class="my-3">
            <div class="form-group has-validation mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" name="name" id="name" value="{{user.name}}" placeholder="Name" required>
                <div class="invalid-feedback">
                    {{errors.name}}
                </div>
            </div>
            <div class="form-group has-validation mb-3">
                <label for="username" class="form-label">Email</label>
                <input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="email" id="email" value="{{user.email}}" placeholder="example@example.com" required>
                <div class="invalid-feedback">
                    {{errors.email}}
                </div>
            </div>
            <div class="form-group has-validation mb-4">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" name="password" placeholder="*********" id="password" required>
                <div class="invalid-feedback">
                    {{errors.password}}
                </div>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="button btn__primary btn-lg">Register</button>
            </div>
        </form>
    </div>
</div>