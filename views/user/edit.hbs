<div class="container my-4">
{{!-- Edición perfil: Nombre, foto y visibility --}}
    <h1>Editar perfil</h1>
    <form action="/edit-profile" method="POST" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="name" id="name" value="{{currentUser.name}}" placeholder="name">
        </div>
        <div class="form-group mb-3">
            <label for="profilePicture" class="form-label">Foto de perfil</label>
            <input type="file" class="form-control" name="profilePicture" id="profilePicture">
        </div>
        <div "form-group mb-3">
           <div class="form-check form-switch">
                <input name="visibility" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Perfil privado</label>
            </div>
        </div>
        
        {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        {{#if message}}
            <div class="alert alert-success">{{message}}</div>
        {{/if}}

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark btn-lg my-3">Actualizar perfil</button>
        </div>
    </form>
{{!-- EDICIÓIN SETTINGS: EMAIL, PASSWORD, PAGO --}}
</div>