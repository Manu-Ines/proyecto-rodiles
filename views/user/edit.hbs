<div class="container my-4">
    <h1>Editar perfil</h1>
    <form action="/edit-profile" method="POST" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name" value="{{currentUser.name}}" placeholder="name">
        </div>
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" id="name" value="{{currentUser.email}}" placeholder="email" required>
        </div>
        <div class="form-group mb-4">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" placeholder="*********" id="password">
        </div>
        <div class="form-group mb-3">
            <label for="profilePicture" class="form-label">Profile picture</label>
            <input type="file" class="form-control" name="profilePicture" id="profilePicture">
        </div>
        {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        {{#if message}}
            <div class="alert alert-success">{{message}}</div>
        {{/if}}
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark btn-lg">Actualizar perfil</button>
        </div>
    </form>
</div>