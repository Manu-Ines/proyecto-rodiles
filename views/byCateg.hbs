<div class="bg__main mb-4">
    <div class="container py-5 text-light">
        <h1>{{categ}}</h2>
            <small>Proyectos y voluntariados</small>
    </div>
</div>

{{#unless projects}}
{{#unless volunts}}
<div class="container my-5">
    <div class="border rounded__custom p-4 text-center mx-auto" style="max-width: 550px;">
        <span class="fa-stack fa-3x mb-4 mx-auto">
            <i class="fas fa-square fa-stack-2x" style="color: #d2e6f8;"></i>
            <i class="far fa-search fa-stack-1x" style="color: #1167b1;"></i>
        </span>
        <h4>No hay nada por el momento</h4>
        <p>Por el momento no existe ningún proyecto ni voluntariado en la categoría {{categ}}</p>
        <a href="/" class="button btn__primary mt-2">Explora proyectos y voluntariados</a>
    </div>
</div>
{{/unless}}
{{/unless}}

{{#if projects}}
<div class="container my-4">
    <h3>Proyectos</h3>
    <p>Apoya a los proyectos que te importan desde sólo 1€</p>
    <div class="row">
        {{#each projects as |project|}}
        <div class="col-lg-4 mb-3">
            {{> projectCard}}
        </div>
        {{/each}}
    </div>
</div>
{{/if}}

{{#if volunts}}
<div class="container my-4">
    <h3>Voluntariados</h3>
    <p>Asiste a voluntariados de tu zona</p>
    <div class="row">
        {{#each volunts as |volunt|}}
        <div class="col-lg-4 mb-3">
            {{> voluntCard}}
        </div>
        {{/each}}
    </div>
</div>
{{/if}}